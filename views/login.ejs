<%- include('partials/header') %>
<div class="container mt-5">
  <h1>Login</h1>
  <div class="card block">
    <div class="card-body">
      <!-- Makes POST request to /register route -->
      <form action="/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" class="form-control" name="username">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" class="form-control" name="password">
        </div>
        <button type="submit" class="btn btn-dark">Login</button>
      </form>
    </div>
  </div>

<!----------------- Social Accounts Buttons ------------------->
  <div class="social-block block">
    <div class="card-body d-grid gap-2">
      <a class="btn btn-block btn-google" href="/auth/google" role="button">
        <i class="fa-brands fa-google"></i>
        Sign Up with Google
      </a>
    </div>
    <div class="card-body d-grid gap-2">
      <a class="btn btn-block btn-instagram" href="#" role="button">
        <i class="fa-brands fa-instagram"></i>
        Sign Up with Instagram
      </a>
    </div>
    <div class="card-body d-grid gap-2">
      <a class="btn btn-block btn-github" href="#" role="button">
        <i class="fa-brands fa-github"></i>
        Sign Up with Github
      </a>
    </div>
  </div>
</div>

<%- include('partials/header') %>
